extends layouts/login-layout.pug

block content
    .login-container
      h1 Login
      form(method="post")
        p.errorMessage #{errorMessage}
        input(type="text", name="loginUsername", placeholder="Username or email", value=loginUsername, required)
        input(type="password", name="loginPassword", placeholder="Password", value=loginPassword, required)
        input(type="submit", value="Login")
      a(href="/account/register") Need an account ? Register here.